{
    "name": "toggl_revery",
    "version": "0.0.0",
    "description": "My Project",
    "esy": {
        "build": "dune build -p <PACKAGE_NAME>",
        "buildDev": "pesy",
        "release": {
            "releasedBinaries": [
                "TogglReveryApp.exe"
            ]
        }
    },
    "buildDirs": {
        "test": {
            "require": ["toggl_revery.lib"],
            "main": "TestTogglRevery",
            "name": "TestTogglRevery.exe"
        },
        "library": {
            "name": "toggl_revery.lib",
            "namespace": "TogglRevery",
            "require": ["piaf", "containers", "base64"]
        },
        "executable": {
            "require": ["toggl_revery.lib"],
            "main": "TogglReveryApp",
            "name": "TogglReveryApp.exe"
        }
    },
    "scripts": {
        "pesy": "bash -c 'env PESY_MODE=update pesy'",
        "test": "esy x TestTogglRevery.exe"
    },
    "dependencies": {
        "@opam/dune": ">=1.6.0",
        "@opam/containers": "*",
        "@reason-native-web/piaf": "*",
        "@esy-ocaml/reason": "*",
        "ocaml": "^4.4.0",
        "@opam/base64": "*"
    },
    "devDependencies": {
        "ocaml": "4.7.1004",
        "@opam/utop": "*",
        "@opam/ocp-indent": "*",
        "refmterr": "*",
        "pesy": "*",
        "@opam/merlin": "*"
    }
}
