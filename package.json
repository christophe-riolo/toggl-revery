{
    "name": "trackoclock",
    "version": "0.0.0",
    "description": "My Project",
    "esy": {
        "build": "dune build -p <PACKAGE_NAME>",
        "buildDev": "pesy",
        "release": {
            "releasedBinaries": [
                "TrackOClockApp.exe"
            ]
        }
    },
    "buildDirs": {
        "test": {
            "require": ["trackoclock.lib"],
            "main": "TestTrackOClock",
            "name": "TestTrackOClock.exe"
        },
        "library": {
            "name": "trackoclock.lib",
            "namespace": "TrackOClock",
            "require": ["piaf", "containers", "base64", "yojson", "ppx_deriving_yojson.runtime"],
            "preprocess": ["pps", "ppx_deriving_yojson"]
        },
        "executable": {
            "require": ["trackoclock.lib"],
            "main": "TrackOClockApp",
            "name": "TrackOClockApp.exe"
        }
    },
    "scripts": {
        "pesy": "bash -c 'env PESY_MODE=update pesy'",
        "test": "esy x TestTrackOClock.exe"
    },
    "dependencies": {
        "@opam/dune": ">=1.6.0",
        "@opam/containers": "*",
        "@reason-native-web/piaf": "*",
        "@esy-ocaml/reason": "*",
        "ocaml": "4.7",
        "@opam/base64": "*",
        "@reason-native-web/gluten-lwt-unix": "~0.2",
        "@opam/lwt": "<5.3",
        "@opam/ppx_deriving_yojson": "*"
    },
    "devDependencies": {
        "ocaml": "4.8",
        "@opam/utop": "*",
        "@opam/atdgen": "*",
        "@opam/ocp-indent": "*",
        "refmterr": "*",
        "pesy": "*",
        "@opam/merlin": "*"
    }
}
